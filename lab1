#include <stdio.h>
#include <math.h>

int main()
{ float a, b, x;
printf("Enter a -> ");
scanf("%f", &a);
printf("Enter b -> ");
scanf("%f", &b);
printf("Enter x -> ");
scanf("%f", &x);

float res = 0;

float mul = a * b;

if (mul < x)
{
res = mul / x;
printf("результат=%f\n", res);
}
else if (mul > x)
{
res = mul - x;
printf("результат=%f\n", res);
}
else
printf("(a*b) и x равны\n");
}